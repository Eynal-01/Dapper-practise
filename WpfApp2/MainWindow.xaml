<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid Name="myDataGrid" Height="300" SelectionChanged="DataGrid_SelectionChanged"
            ></DataGrid>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" Name="Name" FontSize="25"></TextBox>
            <Slider VerticalAlignment="Center" Minimum="0" Maximum="100" Width="200" Name="Score"></Slider>
            <CheckBox Name="IsStar" FontSize="25" Content="Updated Me"></CheckBox>
        </StackPanel>
    </StackPanel>
</Window>   
